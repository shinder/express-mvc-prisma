<%- include('partials/html-head') %>
<%- include('partials/html-navbar') %>
<div class="container mx-auto flex flex-col items-center justify-center">
  <div class="mt-4">
    <h1 class="text-2xl font-bold">try-post-form</h1>
    <form method="post" enctype="application/x-www-form-urlencoded">
      <fieldset
        class="fieldset bg-base-200 border-base-300 rounded-box w-xs border p-4"
      >
        <legend class="fieldset-legend">傳統表單送出資料</legend>

        <label class="label mt-2">電子郵箱</label>
        <input type="email" class="input" placeholder="電子郵箱" name="email" />
        <p class="text-error"><%= typeof email !== 'undefined' ? email : '' %></p>

        <label class="label mt-2">密碼</label>
        <input type="password" class="input" placeholder="密碼" name="password" />
        <p class="text-error"><%= locals.password ? password : '' %></p>

        <button class="btn btn-neutral mt-4">送出</button>
      </fieldset>
    </form>
  </div>
</div>
<%- include('partials/html-scripts') %>
<%- include('partials/html-tail') %>
